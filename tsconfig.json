{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": true,
		"jsx": "react",
		"outDir": "./dist/",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"removeComments": true,
		"strict": true,
		"sourceMap": true,
		"lib": [ "es2016", "es2015", "dom", "dom.iterable" ]
	},
	"include": [
		"./app/**/*"
	]
}
